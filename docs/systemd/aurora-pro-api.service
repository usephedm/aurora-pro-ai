[Unit]
Description=Aurora Pro API Server
After=network.target redis.service

[Service]
Type=simple
User=aurora
Group=aurora
WorkingDirectory=/opt/aurora-pro
Environment=PATH=/opt/aurora-pro/venv/bin
ExecStart=/opt/aurora-pro/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
StandardOutput=append:/var/log/aurora-pro/api.log
StandardError=append:/var/log/aurora-pro/api.log

[Install]
WantedBy=multi-user.target

